<div class="container columns clearfix">
<%= form_for(@user, {class: "form-horizontal center"}) do |f| %>

  <% if f.object.errors.any? %>
    <ul class="errors">
      <% f.object.errors.full_messages.each do |error| %>
        <li><%= error %></li>
      <% end %>
    </ul>
  <% end %>

    <div class="form-group two-column">
      <div class="col-sm-2 ">
        <%= f.label :first_name, class: "control-label"%>
      </div>
      <div class="col-sm-3 two-column column">
        <%= f.text_field :first_name, class: "form-control"%>
      </div>
    </div>
    <br>
    <br>
      <div class="form-group">
        <div class="col-sm-2">
          <%= f.label :last_name, class: "control-label"%>
        </div>
          <div class="col-sm-3 ">
            <%= f.text_field :last_name, class: "form-control" %>
          </div>
      </div>
        <br>
        <br>
      <div class="form-group">
        <div class="col-sm-2">
            <%= f.label :age, class: "control-label"%>
          </div>
          <div class="col-sm-3">
            <%= f.text_field :age, class: "form-control" %>
          </div>
      </div>
      <br>
      <br>

      <div class="form-group">
        <div class="col-sm-2">
            <%= f.label :email, class: "control-label"%>
          </div>
          <div class="col-sm-3">
            <%= f.text_field :email, class: "form-control" %>
          </div>
      </div>
      <br>
      <br>
        <div class="actions col-sm-offset-2 submit_fit">
          <%= f.submit class: 'btn btn-primary'%>
        </div>
<% end %>
</div>
