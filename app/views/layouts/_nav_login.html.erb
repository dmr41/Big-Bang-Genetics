<%= form_for :authy, url: signin_path do |f| %>
  <div>
    <% if signup_path %>
      <%= f.label :email%>
      <%= f.email_field :email%>
      <%= f.label :password%>
      <%= f.password_field :password %>
      <%= f.submit "Login" %>
      <span class="signup-adjust"><%= link_to"Sign Up", signup_path %></span>
      <% end %>
  </div>
  <% if @sign_in_error %>
      <p class="error-format"><%= @sign_in_error %></p>
  <% end %>
<% end %>
