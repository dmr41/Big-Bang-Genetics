<!DOCTYPE html>
<html>
  <head>
    <title>BigBangGenetics</title>
    <%= csrf_meta_tags %>
    <%= stylesheet_link_tag 'application', media: 'all'%>
    <%= javascript_include_tag 'application'%>
  </head>
  <body>

    <div class="navbar navbar-default navbar-fixed">
      <div class="container">
        <div class="row">
            <%= link_to("BBGenetics", root_path) %>
              <text class="pull-right">
              <% if current_user %>
                <%= link_to "Sign Out", signout_path %>
              <% else %>
                <%= form_for :authy, url: signin_path do |f| %>
                  <% if @sign_in_error %>
                      <p><%= @sign_in_error %></p>
                  <% end %>
                  <div>
                    <%= link_to "Sign Up", signup_path %> |
                    <%= f.label :email%>
                    <%= f.email_field :email%>
                    <%= f.label :password%>
                    <%= f.password_field :password %>
                    <%= f.submit "Login" %>
                  </div>
                <% end %>
              <% end %>
            </text>
        </div>
      </div>
    </div>

    <div class="container">
      <%= yield %>

      <footer>
        <div class="row">
          <div class="col-sm-3">
            <%= link_to("Home", root_path) %> |
            <%= link_to("Users", users_path) %> |
            <%= link_to("Upload", diseases_path) %> |
            <%= link_to("Registration", signup_path) %>
          </div>
        </div>
      </footer>
    </div>
  </body>
</html>
