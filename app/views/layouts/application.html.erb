<!DOCTYPE html>
<html>
  <head>
    <%= favicon_link_tag '46LYRs.jpg'%>
    <title>BigBangGenetics</title>
    <%= csrf_meta_tags %>
    <%= stylesheet_link_tag 'application', media: 'all'%>
    <%= javascript_include_tag 'application'%>
  </head>
  <body>

    <div class="navbar navbar-default navbar-fixed">
      <div class="container">
        <div class="row">
            <%= link_to("BBGenetics", root_path) %>
              <text class="pull-right">
              <% if current_user %>
                <%= link_to "Sign Out", signout_path %>
              <% else  %>
                <%= render "layouts/nav_login" unless @reg == "reg"  %>
              <% end %>
            </text>
        </div>
      </div>
    </div>

    <div class="container">
      <%= yield %>

      <footer>
        <div class="row">
          <div class="col-sm-5">
            <%= link_to("Home", root_path) %> |
            <%= link_to("Users", users_path) %> |
            <%= link_to("Cancers", cancers_path) %>
          </div>
        </div>
      </footer>
    </div>
  </body>
</html>
