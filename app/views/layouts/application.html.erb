<!DOCTYPE html>
<html>
  <head>
    <%= favicon_link_tag '46LYRs.jpg'%>
    <title>BigBangGenetics</title>
    <%= csrf_meta_tags %>
    <%= stylesheet_link_tag 'application', media: 'all'%>
    <%= javascript_include_tag 'application'%>
  </head>
  <body>
  <div>

  <script>
  size(400,400);
  smooth();

  int   nbr_circles = 100;
  float angle_incr = radians(2);

  background(255);

  fill(0);

  float cx = width/2;
  float cy = height/2;
  float outer_rad = width*.45;

  float sm_diameter = 4;

  for (int i = 1; i <= nbr_circles; ++i) {
    float ratio = i/(float)nbr_circles;
    float spiral_rad = ratio * outer_rad;
    float angle = i*angle_incr;
    float x = cx + cos(angle) * spiral_rad;
    float y = cy + sin(angle) * spiral_rad;

    // draw tiny circle at x,y
    ellipse(x, y, sm_diameter, sm_diameter);
  }
  </script>
</div>
    <div class="navbar navbar-default navbar-fixed">
      <div class="container">
        <div class="row">
            <%= link_to("BBGenetics", root_path) %>
              <text class="pull-right">
              <% if current_user %>
                <%= link_to "Sign Out", signout_path %>
              <% else  %>
                <%= render "layouts/nav_login" unless @reg == "reg"  %>
              <% end %>
            </text>
        </div>
      </div>
    </div>

    <div class="container">
      <%= yield %>

      <footer>
        <div class="row">
          <div class="col-sm-5">
            <%= link_to("Home", root_path) %> |
            <%= link_to("Users", users_path) %> |
            <%= link_to("Cancers", cancers_path) %>
          </div>
        </div>
      </footer>
    </div>
  </body>
</html>
