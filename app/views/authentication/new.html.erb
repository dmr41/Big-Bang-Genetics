<%= form_for :authy, url: signin_path do |f| %>

  <% if @sign_in_error %>
      <p><%= @sign_in_error %></p>

  <% end %>
  <div>
    <%= f.label :email %>
    <%= f.email_field :email, autofocus: true %>
  </div>
  <div>
    <%= f.label :password %>
    <%= f.password_field :password %>
  </div>
  <div>
    <%= f.submit "Login" %>
  </div>
<% end %>
